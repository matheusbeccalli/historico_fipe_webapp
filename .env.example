# FIPE Price Tracker - Environment Variables
# Copy this file to .env and update with your actual values

# Flask Environment (development or production)
FLASK_ENV=development

# Secret key for Flask sessions (generate a secure random key for production!)
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production

# Database URL
# For SQLite (development):
DATABASE_URL=sqlite:///C:/Users/mathe/Desktop/Programming/fipe_scrapper/fipe_data.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost/fipe_db

# Default car to display on page load
DEFAULT_BRAND=Volkswagen
DEFAULT_MODEL=Gol

# SQLAlchemy settings (optional)
SQLALCHEMY_ECHO=False

# API Key Authentication
# Comma-separated list of valid API keys for accessing the API
# Generate secure keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Example: API_KEYS=key1_abc123,key2_def456,key3_ghi789
API_KEYS=
