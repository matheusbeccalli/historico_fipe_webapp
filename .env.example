# FIPE Price Tracker - Environment Variables
# Copy this file to .env and update with your actual values

# Flask Environment (development or production)
FLASK_ENV=development

# Secret key for Flask sessions (generate a secure random key for production!)
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production

# Database URL (optional - defaults to ./data/fipe_data.db for SQLite)
# Leave commented out to use the default SQLite path in data/ directory
# DATABASE_URL=sqlite:///path/to/your/database.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost/fipe_db

# Default car to display on page load
DEFAULT_BRAND=Volkswagen
DEFAULT_MODEL=Gol

# SQLAlchemy settings (optional)
SQLALCHEMY_ECHO=False

# ============================================================
# API Key Authentication
# ============================================================
# Generate secure keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# IMPORTANT: Both variables are required for API authentication to work.
# If left empty, the app will allow access in development mode with a warning.

# API_KEY: The application's own key (automatically injected into frontend)
# This key is used by the web interface to authenticate API requests
API_KEY=

# API_KEYS_ALLOWED: Comma-separated list of ALL valid API keys
# MUST include API_KEY above, plus any additional keys for external clients
# Example: API_KEYS_ALLOWED=your-app-key-abc123,partner-key-xyz789,client-key-def456
API_KEYS_ALLOWED=
